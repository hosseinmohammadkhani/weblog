<html>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="/css/navbarStyles.css">
  <link rel="stylesheet" href="/css/homeCss.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <title><%= pageTitle %></title>
  <script>
    function myFunction() {
    var x = document.getElementById("myTopnav");
    if (x.className === "topnav") {
      x.className += " responsive";
    } else {
      x.className = "topnav";
    }
  }
  </script>

  <body>
    <div class="topnav" id="myTopnav">
      <a href="/" class="<%= path === "/" ? "active" : "" %>">Home</a>
      <% if(req.isAuthenticated()){ %>
        <a href="/dashboard" class="<%= path === "/dashboard" ? "active"  : "" %>">Dashboard</a>
      <% }else{ %>
        <a href="/users/login" class="<%= path === "/users/login" ? "active"  : "" %>">Login</a>
      <% } %>
      <a href="/contact-us" class="<%= path === "/contact-us" ? "active" : "" %>">Contact Us</a>
      <% if(req.isAuthenticated()){ %>
        <a href="/users/logout">Logout</a>
      <% } %>
      <a href="javascript:void(0);" class="icon" onclick="myFunction()">
        <i class="fa fa-bars"></i>
      </a>
    </div>
    <%- body %>
  </body>

</html>










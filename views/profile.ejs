<section style="background-color: #eee;">
    <div class="container py-5">
      <div class="row">
        <div class="col">
          <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
            <ol class="breadcrumb mb-0">
              <li class="breadcrumb-item"><a href="/">صفحه ی اصلی</a></li>
            </ol>
          </nav>
        </div>
      </div>
  
      <div class="row">
        <div class="col-lg-4">
          <div class="card mb-4">
            <div class="card-body text-center">
              <% if(profilePhoto == ""){ %>
                <img src="http://localhost:5000/uploads/profilePhotos/blank.png" alt="avatar"
                class="rounded-circle img-fluid" style="width: 150px;">
              <% }else{ %>
                <img src="http://localhost:5000/uploads/profilePhotos/<%= profilePhoto %>" alt="avatar"
                class="rounded-circle img-fluid" style="width: 150px;">
              <% } %>
              <h5 class="my-3"><%= username %></h5>
              <div class="d-flex justify-content-center mb-2">
                
                <a type="button" href="/users/message/<%= username %>" class="btn btn-outline-primary ms-1">ارسال پیام</a>
              </div>
            </div>
          </div>
          
        </div>
        <div class="col-lg-8">
          <div class="card mb-4">
            <div class="card-body">
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">ایمیل</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= email %></p>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">تاریخ عضویت</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= convertToShamsi(date) %></p>
                </div>
            </div>
            </div>
          </div>
          
        </div>
      </div>
    </div>
  </section>